<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDialogView"
    android:layout_width="256dp"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="@drawable/shape_gradient_dialog">

    <TextView
        android:id="@+id/releaseNotesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="start|center_vertical"
        android:text="@string/updateBoard_title"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newVersionApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:gravity="start|center_vertical"
        android:text="App version 1.0"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/releaseNotesTitle" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newVersionApp">

        <TextView
            android:id="@+id/updateNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="16dp"
            android:gravity="start|center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:text="&#183; update 1\n&#183; update 2"
            android:textSize="16dp"
            />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>