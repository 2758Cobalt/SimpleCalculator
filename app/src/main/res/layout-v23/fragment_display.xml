<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    app:layout_constraintBottom_toTopOf="@+id/quickPanelLabel"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/calculatorLabel">

    <TextView
        android:id="@+id/lastExpressionField"
        style="@style/resultFieldText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_vertical|end"
        android:autoSizeMaxTextSize="24dp"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:alpha="0.5"
        android:hint="0"
        android:text="0"
        android:textSize="24dp"
        android:background="@drawable/shape_gray_box"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintVertical_weight="0.4"
        app:layout_constraintBottom_toTopOf="@+id/inputField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoryLabel"
        tools:targetApi="o" />


    <TextView
        android:id="@+id/inputField"
        style="@style/inputFieldText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical|end"
        android:autoSizeMaxTextSize="24dp"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="start"
        android:hint="0"
        android:text="0"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/outputField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastExpressionField"
        tools:targetApi="o" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/outputField"
        app:layout_constraintEnd_toEndOf="@+id/inputField"
        app:layout_constraintStart_toStartOf="@+id/inputField" />

    <TextView
        android:id="@+id/outputField"
        style="@style/resultFieldText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.3"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:alpha="0.7"
        android:autoSizeMaxTextSize="18dp"
        android:autoSizeMinTextSize="4dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="?attr/selectableItemBackground"
        android:gravity="top|end"
        android:hint="..."
        android:text="0"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/inputField"
        app:layout_constraintTop_toBottomOf="@+id/inputField"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/memoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:text="@string/display_memory"
        android:textColor="#757575"
        android:textColorHint="@color/gray150"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/angleTypeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/text_degrees"
        android:textColor="#757575"
        android:textColorHint="@color/gray150"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memoryField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:maxLines="1"
        android:text="0"
        android:textColor="#757575"
        android:textColorHint="@color/gray150"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/angleTypeField"
        app:layout_constraintStart_toEndOf="@+id/memoryLabel"
        app:layout_constraintTop_toTopOf="@+id/memoryLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>