<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".v15.activities.SettingsActivity"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/preferenceTitle_calculatorCategory"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingHorizontal="8dp"
                android:orientation="vertical"
                >

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/prefAutoSaveMemoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preference_memoryAutoSave" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/prefKeepLastRecordCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/preference_keepLastCalculationDesc" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/prefAllowCalcHistoryCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/preference_allowCalculationsHistory" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/preferenceTitle_keyboardCategory"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/prefAllowVibrationSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preference_vibration" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/preference_vibrationStrength"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/prefVibrationStrengthSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/preference_vibrationStrengthDesc"
                    android:stepSize="5"
                    android:value="25"
                    android:valueFrom="5.0"
                    android:valueTo="100.0" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/preferenceTitle_aboutCategory"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:orientation="vertical">

                <com.google.android.material.chip.Chip
                    android:id="@+id/prefPrivacyPolicy"
                    style="@style/Widget.Material3.Chip.Suggestion.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preference_privacyPolicy" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

  </androidx.constraintlayout.widget.ConstraintLayout>