<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activities.MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/displayContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="14dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:layout_constraintVertical_weight="0.6"
        app:layout_constraintBottom_toTopOf="@+id/numpadPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/buttonOptions"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/new_style_round"
        android:contentDescription="@string/sampleText"
        android:elevation="4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/settings_24"
        app:layout_constraintBottom_toBottomOf="@+id/displayContainer"
        app:layout_constraintEnd_toEndOf="@+id/displayContainer" />

    <ImageButton
        android:id="@+id/buttonMiniMode"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_margin="8dp"
        android:background="@drawable/new_style_round"
        android:backgroundTint="@color/theme_secondary"
        android:contentDescription="@string/sampleText"
        android:elevation="4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:rotation="90"
        android:src="@drawable/baseline_arrow_outward_24"
        app:layout_constraintBottom_toBottomOf="@+id/displayContainer"
        app:layout_constraintEnd_toStartOf="@+id/buttonOptions" />

    <TextView
        android:id="@+id/miniModeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="@string/preference_miniModeIndicate"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/numpadPager"
        app:layout_constraintStart_toStartOf="@+id/numpadPager"
        app:layout_constraintTop_toTopOf="@+id/numpadPager" />

    <TextView
        android:id="@+id/miniModeSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:text="@string/preference_miniModeIndicateHint"
        android:textAlignment="center"
        android:textSize="28sp"

        app:layout_constraintEnd_toEndOf="@+id/miniModeTitle"
        app:layout_constraintStart_toStartOf="@+id/miniModeTitle"
        app:layout_constraintTop_toBottomOf="@+id/miniModeTitle" />

    <!--Numpad-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/numpadPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/displayContainer"
        app:layout_constraintStart_toStartOf="@+id/displayContainer"
        app:layout_constraintTop_toBottomOf="@+id/displayContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>