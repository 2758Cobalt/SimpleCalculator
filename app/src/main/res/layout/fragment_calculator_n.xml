<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/calculatorDisplayHolder"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/calculatorNavigationLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/calculatorDisplayHolder"
        app:layout_constraintStart_toStartOf="@+id/calculatorDisplayHolder"
        app:layout_constraintTop_toBottomOf="@+id/calculatorDisplayHolder"
        tools:showIn="@layout/fragment_calculator_n">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculatorConvertersIcon"
            style="?attr/materialIconButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/preference_miniMode"
            app:icon="@drawable/ic_navigate_converter" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculatorMiniModeIcon"
            style="?attr/materialIconButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/calculatorConvertersIcon"
            android:contentDescription="@string/preference_miniMode"
            app:icon="@drawable/ic_numpad_reduce" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculatorBackSpaceIcon"
            style="?attr/materialIconButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toStartOf="@+id/calculatorSettingsIcon"
            android:contentDescription="@string/contentDescription_backspace"
            app:icon="@drawable/ic_action_backspace" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculatorSettingsIcon"
            style="?attr/materialIconButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/action_settings"
            app:icon="@drawable/ic_setting" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/calculatorHistoryHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/coordinatorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatorNavigationLayout" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatorNavigationLayout"
        app:layout_constraintVertical_bias="1.0">

        <FrameLayout
            android:id="@+id/numpadHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:paddingBottom="24dp"/>

        <FrameLayout
            android:id="@+id/engineeringNumpadHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
