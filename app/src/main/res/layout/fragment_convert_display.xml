<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:text="@string/labelFragment_trigonometry"
        android:textSize="14sp"
        android:textColor="@color/gray75"
        android:textColorHint="@color/gray75"
         />

    <TextView
        android:id="@+id/descAdditional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/text_EnterSin"
        android:textColor="@color/black"
        android:textColorHint="@color/gray75"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/gray75"
            android:textColorHint="@color/gray75"
            android:text="0"
            android:hint="@string/editText_enterNum"
            android:importantForAutofill="no"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/symbolEqual"
            android:textSize="24sp"
            android:textColorHint="@color/gray75"
            android:textColor="@color/gray75"/>

        <TextView
            android:id="@+id/preResultCalculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbolNum0"
            android:textSize="24sp"
            android:textColorHint="@color/gray75"
            android:textColor="@color/gray75"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/text_roundRange"
            android:textSize="18sp"
            android:textColorHint="@color/gray75"
            android:textColor="@color/gray75"/>

        <NumberPicker
            android:id="@+id/roundRangePicker"
            android:theme="@style/numPicker"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="32dp"
            android:elevation="8dp" />


    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/enterAction"
        style="@style/secondaryButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="8dp"
        android:text="@string/buttonConfirm"
        android:textSize="14sp" />


</LinearLayout>