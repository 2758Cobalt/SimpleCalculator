<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:columnCount="4">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/memorySave"
            style="@style/secondaryConverterButtonStyle"
            android:layout_height="64dp"
            android:text="@string/symbolMemorySave"
            app:layout_rowWeight="0"
            app:layout_row="0"
            app:layout_column="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/memoryRead"
            style="@style/secondaryConverterButtonStyle"
            android:layout_height="64dp"
            android:text="@string/symbolMemoryRead"
            app:layout_rowWeight="0"
            app:layout_row="0"
            app:layout_column="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/memoryClear"
            style="@style/secondaryConverterButtonStyle"
            android:layout_height="64dp"
            android:text="@string/symbolMemoryClear"
            app:layout_rowWeight="0"
            app:layout_row="0"
            app:layout_column="2" />

        <com.google.android.material.button.MaterialButton
            style="@style/secondaryConverterButtonStyle"
            android:clickable="false"
            android:layout_height="64dp"
            app:layout_rowWeight="0"
            app:layout_row="0"
            app:layout_column="3" />

        <!--7 8 9 ac-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num7"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum7"
            app:layout_row="1"
            app:layout_column="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num8"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum8"
            app:layout_row="1"
            app:layout_column="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num9"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum9"
            app:layout_row="1"
            app:layout_column="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/converterButtonAllClear"
            style="@style/secondaryConverterButtonStyle"
            android:text="@string/symbolAC"
            app:layout_row="1"
            app:layout_column="3" />

        <!--4 5 6 bksp-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num4"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum4"
            app:layout_row="2"
            app:layout_column="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num5"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum5"
            app:layout_row="2"
            app:layout_column="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num6"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum6"
            app:layout_row="2"
            app:layout_column="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/converterButtonBackSpace"
            style="@style/secondaryConverterButtonStyle"
            android:text="@string/symbolBackSpace"
            app:layout_row="2"
            app:layout_column="3" />

        <!--1 2 3 enter-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num1"
            style="@style/converterButtonStyle"
            app:layout_row="3"
            app:layout_column="0"
            android:text="@string/symbolNum1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num2"
            style="@style/converterButtonStyle"
            app:layout_row="3"
            app:layout_column="1"
            android:text="@string/symbolNum2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num3"
            style="@style/converterButtonStyle"
            app:layout_row="3"
            app:layout_column="2"
            android:text="@string/symbolNum3"/>


        <!--0 00 . enter-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num0"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum0"
            app:layout_row="4"
            app:layout_column="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/converterButtonHundred"
            style="@style/converterButtonStyle"
            android:text="@string/symbolNum00"
            app:layout_row="4"
            app:layout_column="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/converterButtonPoint"
            style="@style/converterButtonStyle"
            android:text="@string/symbolPoint"
            app:layout_row="4"
            app:layout_column="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/converterButtonEnter"
            style="@style/secondaryConverterButtonStyle"
            android:text="@string/symbolEnter"
            app:layout_row="3"
            app:layout_column="3"
            app:layout_rowSpan="2" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>