<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/unitCardItem"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:background="@drawable/shape_white_box">

    <TextView
        android:id="@+id/unitSymbol"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_gradient_orange_box"
        android:elevation="3dp"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:maxLength="3"
        android:textColor="@color/white"
        android:text="Q"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unitTitle"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:text="Unit"
        android:textSize="14sp"
        android:textColor="@color/gray50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/unitSymbol"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/unitConvertInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="0.000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/unitSymbol"
        app:layout_constraintTop_toBottomOf="@+id/unitTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>