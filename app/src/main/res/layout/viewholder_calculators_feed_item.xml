<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/extraCalculatorUnitCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/extraCalculatorUnitSymbolCard"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/md_theme_surfaceContainer"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/unitCalculatorUnitSymbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Calculator image"
                    android:gravity="center"
                    android:maxLength="4"
                    android:text="uq" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/unitCalculatorUnitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:layout_toEndOf="@+id/extraCalculatorUnitSymbolCard"
                android:gravity="center"
                android:text="Unit"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/extraCalculatorUnitValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="8dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/unitCalculatorUnitName"
                android:hint="0"
                android:textAlignment="textEnd"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>