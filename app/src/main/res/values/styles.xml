<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlayExtended" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="appBackground">
        <item name="android:background">@drawable/bg_theme</item>
    </style>

    <style name="engineering_numpad_buttons" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="materialIconButtonFilledTonalErrorStyle" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:backgroundTint">@color/md_theme_errorContainer</item>
        <item name="iconTint">@color/md_theme_error</item>
    </style>
    
    <style name="SC.Keyboard.Sheet" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.KeyboardSheet</item>
    </style>

    <style name="SC.EngineeringKeyboard" parent="SC.Keyboard.Sheet">
        <item name="android:backgroundTint">@color/theme_primary</item>
    </style>

    <style name="SC.EngineeringDragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@color/md_theme_surfaceVariant</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.KeyboardSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.DisplaySheet" parent="Widget.Material3.CardView.Elevated">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
    




</resources>