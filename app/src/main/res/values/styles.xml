<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="materialIconButtonFilledTonalErrorStyle" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:backgroundTint">@color/md_theme_errorContainer</item>
        <item name="iconTint">@color/md_theme_error</item>
    </style>
    
    <style name="SC.Keyboard.Sheet" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.KeyboardSheet</item>
    </style>

    <style name="SC.EngineeringKeyboard" parent="SC.Keyboard.Sheet">
        <item name="android:backgroundTint">@color/md_theme_surfaceContainerLowest</item>
    </style>

    <style name="SC.EngineeringDragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@color/md_theme_surfaceVariant</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.KeyboardSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10%</item>
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeBottomLeft">0%</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>