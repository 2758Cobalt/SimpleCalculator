<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlayExtended" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="appBackground">
        <item name="android:background">@drawable/bg_theme</item>
    </style>

    <style name="numpad_general" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:stateListAnimator">@null</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="engineering_numpad_buttons" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>