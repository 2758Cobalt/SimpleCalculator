<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Calcualtor-->
    <style name="numberButtonStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:padding">0dp</item>

        <item name="android:backgroundTint">?attr/colorSecondary</item>

        <item name="android:textColor">@color/black</item>

        <item name="cornerRadius">8dip</item>
        <item name="strokeColor">#ECECEC</item>

        <item name="rippleColor">@color/orange</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>

        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">16dp</item>
        <item name="autoSizeMinTextSize">6dp</item>
        <item name="autoSizeStepGranularity">2dp</item>
    </style>


    <style name="secondaryButtonStyle" parent="numberButtonStyle">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/gray50</item>
    </style>


    <style name="primaryButtonStyle" parent="numberButtonStyle">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColorHint">@color/white200</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="expandButtonStyle" parent="numberButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="converterButtonStyle" parent="numberButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="secondaryConverterButtonStyle" parent="converterButtonStyle">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SelectorButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>

        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>

        <item name="android:backgroundTint">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>

        <item name="cornerRadius">8dip</item>

        <item name="rippleColor">@color/orange</item>
    </style>



</resources>