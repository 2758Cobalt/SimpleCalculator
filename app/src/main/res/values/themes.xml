<resources>
    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primaryVariant</item>
        <item name="colorOnPrimary">@color/light_displayOrange</item>

        <item name="colorSecondary">@color/theme_secondary</item>

        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:statusBarColor">@color/white200</item>

        <item name="colorPrimaryDark">@color/gold</item>


        <item name="colorSurface">@color/white</item>


        <item name="colorControlActivated">@color/orange</item>

        <item name="windowActionBar">false</item> <!--Toolbar-->
        <item name="windowNoTitle">true</item> <!--Title app-->
    </style>

    <style name="appBackground">
        <item name="android:background">@drawable/new_style</item>
    </style>

    <!--Тема для полей-->
    <style name="inputFieldText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray75</item>
    </style>

    <style name="resultFieldText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray120</item>
    </style>

    <style name="expandButtonTheme">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>





</resources>